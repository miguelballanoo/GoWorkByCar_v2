<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mballano.goworkbycar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoWorkByCar">
        <activity
            android:name=".MisViajesCreadosActivity"
            android:exported="false" />
        <activity
            android:name=".MisViajesActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.MisViajesActivity"
            android:exported="true" />
        <activity
            android:name=".AuthActivity"
            android:exported="true" />
        <activity
            android:name=".ui.MdfDatosActivity"
            android:exported="true" />
        <activity
            android:name=".ui.AddViajeActivity"
            android:exported="true" />
        <activity
            android:name=".ui.VerViajeActivity"
            android:exported="true" />
        <activity android:name=".ui.MisViajesCreadosActivity"
            android:exported="true"/>
    </application>

</manifest>